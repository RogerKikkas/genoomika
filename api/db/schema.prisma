datasource DS {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  password     String
  refreshToken String?
  createdAt    DateTime   @default(now())
  userRoles    UserRole[]
}

model UserRole {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?

  @@unique([name, userId])
}
